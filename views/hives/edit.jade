extends ../layout

block content
    h1.
        Hive ID #{hive._id}
    form(action='/hives/#{hive._id}/edit',method='post',name='updatehive',enctype='application/x-www-form-urlencoded')
        p Name:
            input#inputName(type='text', value='#{hive.name}', name='name')
        p
            input(type='hidden',value='PUT',name='_method')
        p
            button#btnSubmit(type='submit').
                Update